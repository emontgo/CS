<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<div>
    <% @projects.each do |project| %>
      </br></br>
      <div class="card" style="border: 1px solid grey; width: 400px;">
        <div class="card-body">
          <h5 class="card-title"><%= project.title %></h5>
          <p class="card-text"><%= project.description %></p>
          <div class="btn btn-info"><%= link_to 'Show', project %></div>
          <div class="btn btn-secondary"><%= link_to 'Edit', edit_project_path(project) %></div>
          <div class="btn btn-danger"><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        </div>
      </div>
    <% end %>
</div>

<br>

<div class="btn btn-primary"><%= link_to 'New Project', new_project_path %></div>
